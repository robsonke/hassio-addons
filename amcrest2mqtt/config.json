{
  "name": "Amcrest2mqtt",
  "version": "1.0.15",
  "slug": "amcrest2mqtt",
  "description": "Amcrest2mqtt, MQTT bridge between Amcrest and Home Assistant",
  "url": "https://github.com/dchesterton/amcrest2mqtt",
  "arch": ["armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "amcrest_host": "",
    "amcrest_port": 80,
    "amcrest_username": "admin",
    "amcrest_password": "",
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_host": "localhost",
    "mqtt_qos": 0,
    "mqtt_port": 1883,
    "mqtt_tls_enabled": "false",
    "mqtt_tls_ca_cert": "",
    "mqtt_tls_cert": "",
    "mqtt_tls_key": "",
    "home_assistant_prefix": "homeassistant",
    "storage_poll_interval": 3600
  },
  "host_network": false,
  "services": ["mqtt:need"],
  "schema": {
    "amcrest_host": "str",
    "amcrest_port": "port",
    "amcrest_username": "str",
    "amcrest_password": "str?",
    "mqtt_username": "str",
    "mqtt_password": "str?",
    "mqtt_host": "str?",
    "mqtt_qos": "int?",
    "mqtt_port": "port?",
    "mqtt_tls_enabled": "bool",
    "mqtt_tls_ca_cert": "str?",
    "mqtt_tls_cert": "str?",
    "mqtt_tls_key": "str?",
    "home_assistant_prefix": "str?",
    "storage_poll_interval": "int?"
  }
}
